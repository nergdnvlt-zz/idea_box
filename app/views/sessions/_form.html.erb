<%= form_tag login_path do %>
  <div class="form-group">
    <%= label_tag :username %>
    <%= text_field_tag :username, class: 'form_control' %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, class: 'form_control' %>
  </div>

  <div class="actions">
    <%= submit_tag "Log In", class: 'btn btn-success' %>
  </div>
<% end %>
