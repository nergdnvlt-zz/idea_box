<%= form_tag login_path do %>
  <div class="form-group">
    <%= label_tag :username %><br>
    <%= text_field_tag :username %>
  </div>

  <div class="form-group">
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Log In", class: 'btn btn-success' %>
  </div>
<% end %>
