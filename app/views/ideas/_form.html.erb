<%= form_for @idea do |f| %>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>

  <%= f.label :category %><br/>
  <%= f.collection_select :category_id, Category.order(:name), :id, :name %><br/>

  <div class="form-check idea-images">
    <%= f.collection_check_boxes :image_ids, Image.all, :id, :title do |t| %>

    <div class="each-checkbox">
      <%= t.label do %>
        <div>
          <%= t.check_box + t.text %>
      </div>
      <% end %>
    </div>

    <% end %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "Submit", class: 'btn btn-success' %>
  </div>
<% end %>
