<%= form_for @idea do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form_control' %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form_control' %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: 'btn btn-success' %>
  </div>
<% end %>
