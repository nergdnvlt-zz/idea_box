<%= form_for @image do |f| %>
  <div class="form-group">
    <%= f.label :src %><br>
    <%= f.text_field :src, class: 'form_control' %>
  </div>

  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_area :title, class: 'form_control' %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: 'btn btn-success' %>
  </div>
<% end %>
